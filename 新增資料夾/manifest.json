{
  "manifest_version": 2,

  "name": "Digital Angel",
  "description": "Creativity project of Introduction to Computer Science, NTUEE.",
  "version": "1.0",
  
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
